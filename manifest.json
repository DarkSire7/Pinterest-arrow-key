{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Pinterest arrow navigation",
    "permissions": [],
    "host_permissions": [
        "https://*.pinterest.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.pinterest.com/*"
            ],
            "js": [
                "pins.js"
            ]
        }
    ],
    "action": {
        "default_icon": "images/p.png"
    },
    "icons": {
        "16": "images/p.png",
        "48": "images/p.png",
        "128": "images/p.png"
    }
}